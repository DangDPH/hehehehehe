<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="imdb_yellow">#F5C518</color>
    <color name="primary_text_light">#FFFFFF</color>
    <color name="text_background_dark">#7F000000</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">IMDb</string>
    <string name="celebrity_portrait">Celebrity portrait</string>
    <string name="film_poster_image_description">Film poster</string>
    <string name="news_article_image">News article image</string>
    <style name="Base.Theme.IMDb_new" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/imdb_yellow</item>
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="SectionHeaderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/imdb_yellow</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SubSectionHeaderContainerStyle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="SubSectionHeaderTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Theme.IMDb_new" parent="Base.Theme.IMDb_new"/>
</resources>